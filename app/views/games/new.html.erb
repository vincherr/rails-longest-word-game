<h1>New Game</h1>

<div id="list">
  <% @letters.each do |letter| %>
  <span id="letter"> <%= letter %> </span>
<% end %>
</div>

<div id="word-form">
<p> What is the longest word you can find?</p>
<form action="/score" method="post">
  <input type="text" id="user_input" name="user_guess"><br>
  <input type="submit" id="submit" value="play">
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<%= hidden_field_tag :@letters, @letters.join %>
<%= hidden_field_tag :@points, params[:points].to_i %>

</form>
</div>
